<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#88be4c</item>
        <item name="colorPrimaryDark">#76a93d</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textColorSecondary">@color/IndianRed</item>

        <item name="android:textSize">15sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar1">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#000</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spin</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#D4AF37</item>
        <item name="android:textColorPrimary">#D4AF37</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#e6e6e6</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/LightGrey</item>
        <item name="colorControlActivated">@color/DarkGreen</item>
    </style>
</resources>
